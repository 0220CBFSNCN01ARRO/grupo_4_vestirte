<!-- ultima visita -->
<div class="container products-wrapper">
    <div class="row">
        <% if (locals.user) { %>
        <div class="col-12 container">
                <h2 class="products-title border-bottom ">Productos visitados</h2>
            </div>
            <%for (vis of locals.vistos) { %>
                <div class="col-12 col-sm-6 col-lg-3  pt-4 pb-3 ">
                    <section class="product-box ">
                        <a href="/productos/detalles/<%= vis.id %>">
                            <figure class="product-box_image">
                                <img src="/img/img-productos/<%= vis.imagen %>"  alt ="imagen de producto" width="250" >
                            </figure>
                        </a>
                        <article class="product-box_data  ">
                            <p><%= vis.nombre %></p>
                            <h2>$<%= vis.precio %></h2>
                        </article>
                        
                    </section>
                </div>
                <%}%>
                <%}%>
            </div>
        </div>
        