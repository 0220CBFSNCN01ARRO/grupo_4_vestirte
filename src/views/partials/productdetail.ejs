<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">
                <%=producto.nombre %> </h2>
            </div>
        </div>
        <div class="product-detail">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <img src="/img/img-database/cuadradas/<%= producto.imagen%>" alt="product image" class="product-detail-img" width="300px">
                    <p class="product-detail-description">
                        <%= producto.descripcion %> 
                    </p>
                </div>
                <div class="col-12 col-lg-4">
                    <article class="product-detail-info">
                        <h2 class="product-detail-title"><%= producto.nombre %> </h2>
                        
                        <p class="product-detail-price">
                            $ <%= producto.precio %> <br>            
                            <a href="./admin.ejs"><button type="button" class="btn btn-primary"> Agregar al Carrito</button></a>
                            <hr>
                        </article>
                    </div>
                </div>
            </div>
        </div>