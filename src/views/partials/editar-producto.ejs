<h1>EDITANDO EL PRODUCTO <%= productoedit.nombre %> </h1>

<form method="POST" action="/detalles/editar?_method=PUT">

    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Nombre</label></div>
    <div class=" col-7   form-inline border-gris ">
      <input type="text" class="  border-0 p-0" name="nombre" value="<%= productoedit.nombre %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Descripcion</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="text" class="  border-0 p-0" name="descripcion" value="<%= productoedit.descripcion %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Precio</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="number" class="  border-0 p-0" name="precio" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Descuento</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="number" class="  border-0 p-0" name="descuento" value="<%= productoedit.descuento %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Imagen</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="text" class="  border-0 p-0" name="imagen" value="<%= productoedit.imagen %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Categoria</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="text" class="  border-0 p-0" name="categoria" value="<%= productoedit.categoria %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Costo de envio</label></div>
    <div class=" col-7  form-inline border-gris ">
      <input type="number" class="  border-0 p-0" name="costo-envio" value="<%= productoedit.envio %>" required>
    </div>
    
    <div class="col-4"><label for="inputText" class=" pt-3 pb-0">Stock</label></div>
    <div class=" col-7   form-inline border-gris ">
      <input type="number" class="  border-0 p-0" name="stock" value="<%= productoedit.stock %>" required>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">EDITAR</button>
      </div>
    </div>
  </form>
  <form method="POST" action="/productos/crear?_method=DELETE/<% productoedit.id%>">
    <button class="btn btn-danger my-2" type="submit">BORRAR</button>
  </form>